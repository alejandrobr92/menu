<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        >


    <androidx.cardview.widget.CardView
            android:id="@+id/card_recomm"
            android:background="@color/card"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <TextView
                    android:id="@+id/title_recommendations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Title"
                    style="@style/pedido_item"
                    android:layout_alignStart="@id/image_recommendations"
                    android:layout_alignLeft="@id/image_recommendations">

            </TextView>

            <ImageView
                    android:id="@+id/image_recommendations"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/title_recommendations"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="TODO"
                    android:src="@mipmap/grinbergen"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                    android:id="@+id/price_recommendations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 350"
                    android:layout_below="@+id/image_recommendations"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    style="@style/pedido_item"
                    android:layout_alignStart="@+id/image_recommendations"
                    android:layout_alignLeft="@+id/image_recommendations">

            </TextView>

            <TextView
                    android:id="@+id/rating_recommendations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8"
                    style="@style/pedido_item"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/price_recommendations"
                    android:layout_alignStart="@id/image_recommendations"
                    android:layout_alignLeft="@id/image_recommendations">

            </TextView>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>