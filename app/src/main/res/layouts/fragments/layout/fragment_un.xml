<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">


    <TextView
            android:layout_width="330dp"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="32dp"
            android:text="Buffalo's Draft Beer"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="117dp"
            android:layout_height="82dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/mesero"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
            android:layout_width="357dp"
            android:layout_height="139dp"
            android:layout_marginBottom="148dp"
            android:background="@color/background"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">


        <RelativeLayout
                android:id="@+id/layout_promotions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/label_promotions"
                    style="@style/dashboard_elements_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="0dp"
                    android:text="@string/inicio_promotions" />

            <ImageView
                    android:id="@+id/image_promotions"
                    android:layout_width="100dp"
                    android:layout_height="77dp"
                    android:layout_above="@id/label_promotions"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/prom" />

        </RelativeLayout>


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/label_buzon"
                    style="@style/dashboard_elements_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="0dp"
                    android:text="@string/inicio_historial" />

            <ImageView
                    android:id="@+id/image_buzon"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_above="@id/label_buzon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/hist" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
            android:layout_width="360dp"
            android:layout_height="130dp"
            android:layout_marginBottom="20dp"
            android:background="@color/background"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">


        <RelativeLayout
                android:id="@+id/layout_recomm"
                android:layout_width="103dp"
                android:layout_height="122dp"
                android:layout_weight="1">


            <TextView
                    android:id="@+id/label_recommendations"
                    style="@style/dashboard_elements_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="0dp"
                    android:text="@string/inicio_recomendations" />

            <ImageView
                    android:id="@+id/image_recommendations"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_above="@id/label_recommendations"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/recom" />
        </RelativeLayout>


        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="122dp"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/label_historial"
                    style="@style/dashboard_elements_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="0dp"
                    android:text="@string/inicio_historial" />

            <ImageView
                    android:id="@+id/image_historial"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_above="@id/label_historial"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/hist" />

        </RelativeLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>